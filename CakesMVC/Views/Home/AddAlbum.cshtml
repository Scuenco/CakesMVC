@model CakesMVC.Models.AlbumViewModel
<br />
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
    @ViewBag.Message
</button><br />
<div style="color:red">
    <h4>@ViewBag.ErrorMessage</h4>
</div>
<form method="post">
    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Enter an album title:</h4>
                </div>
                <div class="modal-body">
                    @Html.LabelFor(x => x.Title): @Html.TextBoxFor(x => x.Title)
                    <div style="color:red">
                        @Html.ValidationMessageFor(x => x.Title)
                    </div><br /><br />
                    @Html.LabelFor(x => x.Thumbnails):
                    @Html.DropDownListFor(x => x.Thumbnail, new SelectList(Model.Thumbnails, "Source", "Name", Model.Thumbnails.First().Source));
                    @Html.HiddenFor(x => x.AlbumId)
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </div>
</form>
